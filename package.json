{
  "name": "project-api-description",
  "version": "1.0.0",
  "description": "The Project API description",
  "main": "index.js",
  "scripts": {
    "build": "redocly bundle src/openapi.yaml --output build/openapi.yaml",
    "build-docs": "npm run build && redocly build-docs build/openapi.yaml --output build/index.html",
    "preview": "nodemon --watch src --exec \"npm run build && redocly preview-docs build/openapi.yaml\"",
    "lint": "redocly lint src/openapi.yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mairie360/project-api-description.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mairie360/project-api-description/issues"
  },
  "homepage": "https://github.com/mairie360/project-api-description#readme",
  "dependencies": {
    "@redocly/cli": "~1.34.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
